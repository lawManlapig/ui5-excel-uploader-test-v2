<core:FragmentDefinition
	xmlns:controls="sap.viz.ui5.controls"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:unif="sap.ui.unified">
	<Dialog
		id="d1"
		title="Choose file to upload..."
		beforeOpen="onBeforeOpen"
		afterClose="onAfterClose">
		<VBox id="vbox1" alignItems="Center">
            <FlexBox id="fb1" alignItems="Stretch">       
                <unif:FileUploader
                    id="fileUploader"
                    name="myFileUpload"
                    fileType="xlsx"
                    multiple="false"
                    sendXHR="true"
                    useMultipart="false"
                    uploadUrl="buildings/ExcelUpload/excel"
                    tooltip="Upload file to Cloud..."
                    change="onChange"
                    fileAllowed="onFileAllowed"
                    fileEmpty="onFileEmpty"
                    typeMissmatch="onTypeMismatch"
                    uploadComplete="onUploadComplete"
                    httpRequestMethod="Put"/>
            </FlexBox>
        </VBox>
		<beginButton>
            <Button id="b1" text="Upload" type="Emphasized" press="onUpload" enabled="false" icon="sap-icon://upload-to-cloud"/>
        </beginButton>
        <endButton>
            <Button id="b3" text="Cancel" press="onCancel" icon="sap-icon://cancel"/>
        </endButton>
	</Dialog>
</core:FragmentDefinition>
