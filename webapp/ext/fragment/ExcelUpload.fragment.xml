<core:FragmentDefinition
    id="fragment1"
    xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="dialog1"
		contentWidth="450px"
        title="Choose File to upload..."
        beforeOpen="onBeforeOpen"
		afterClose="onAfterClose">
		<VBox id="vbox1" alignItems="Center">
			<FlexBox id="fb1" alignItems="Stretch">    
				<u:FileUploader
					id="fileUploader"
					name="myFileUpload"
					uploadUrl="upload/"
					tooltip="Upload your file to the local server"
					multiple="false"
                    sendXHR="true"
                    useMultipart="false"
					change="onChange"
					fileType="xlsx"
					fileAllowed="onFileAllowed"
					fileEmpty="onFileEmpty"
					typeMissmatch="onTypeMismatch"
					uploadComplete="onUploadComplete"/>
			</FlexBox>
		</VBox>
		<buttons>
			<Button id="button1" text="Upload File" press="onUploadPress" type="Emphasized" enabled="false" icon="sap-icon://upload-to-cloud"/>
			<Button id="button3" text="Download Template" press="onTemplateDownloadPress" type="Neutral" icon="sap-icon://document-text"/>
			<Button id="button2" text="Cancel" press="onCancelPress" icon="sap-icon://cancel"/>
		</buttons>
    </Dialog>
</core:FragmentDefinition>
